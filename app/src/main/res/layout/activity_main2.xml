<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtNameDetal"
        android:layout_width="106dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="36dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDonutDetail1" />

    <TextView
        android:id="@+id/txtDesDetail"
        android:layout_width="207dp"
        android:layout_height="38dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/txtNameDetal"
        app:layout_constraintTop_toBottomOf="@+id/txtNameDetal" />

    <TextView
        android:id="@+id/txtPriceDetail"
        android:layout_width="86dp"
        android:layout_height="37dp"
        android:layout_marginStart="52dp"
        android:text="15$"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/txtDesDetail"
        app:layout_constraintStart_toEndOf="@+id/txtDesDetail"
        app:layout_constraintTop_toTopOf="@+id/txtDesDetail"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="@+id/txtDesDetail"
        app:layout_constraintTop_toBottomOf="@+id/txtDesDetail"
        app:srcCompat="@drawable/vector" />

    <TextView
        android:id="@+id/txtDelivery"
        android:layout_width="74dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:text="Delivery in"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="44dp"
        android:text="30 min"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtDelivery"
        app:layout_constraintTop_toBottomOf="@+id/txtDelivery" />

    <TextView
        android:id="@+id/txtRestaurant"
        android:layout_width="143dp"
        android:layout_height="24dp"
        android:layout_marginTop="52dp"
        android:text="Restaurants Info"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/txtReview"
        android:layout_width="281dp"
        android:layout_height="73dp"
        android:layout_marginTop="24dp"
        android:text=" Order a Large Pizza but the size is the equivalent of a medium/small from other places at the same price range."
        app:layout_constraintStart_toStartOf="@+id/txtRestaurant"
        app:layout_constraintTop_toBottomOf="@+id/txtRestaurant" />

    <Button
        android:id="@+id/btnAddCart"
        android:layout_width="339dp"
        android:layout_height="66dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FFC107"
        android:text="Add to Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txtReview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtReview"
        app:layout_constraintTop_toBottomOf="@+id/txtReview" />

    <ImageView
        android:id="@+id/imgDonutDetail1"
        android:layout_width="403dp"
        android:layout_height="207dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/donut_red_1" />
</androidx.constraintlayout.widget.ConstraintLayout>